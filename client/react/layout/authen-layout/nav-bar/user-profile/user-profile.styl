.user-nav-profile {
  position relative
  z-index 10
  &:hover {
    .profile-toggle {
      .k-logo {
        border-color #0a8cf0
      }
    }
  }
  .profile-toggle {
    cursor pointer

  }
  .user-nav-detail {
    position absolute
    width 300px
    top 100%
    z-index 100
    right 0
    padding-top 10px
    &.hide {
      display none
    }
  }
  .profile-detail {
    .nav-profile-loading{
      font-size 50px
      color #0a8cf0
    }
    overflow hidden
    min-height 200px
    border-radius 4px
    box-shadow 0px 0px 15px 1px rgba(69, 65, 78, 0.2)


    background-color #fff
    .detail-body {
      padding 20px
      .body-item{
        display flex
        align-items center
        padding 6px 0
        cursor pointer
        .icon{
          width 40px
        }
        i{
          font-size 20px
        }
        .label{
          font-size 14px
        }
        i
        .label{
          color #6f727d

          transition color 0.2s ease
        }
        &:hover{
          i
          .label{
            color primary
          }
        }
      }
    }
    .detail-header {
      padding 20px
      display flex

      background-image: url("../assets/img/fancy-cushion.png");

      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      position relative
      &:before{
        background-color rgba(primary, 0.6)
        content ''
        display block
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index 0
      }
      align-items center
      .part-right
      .part-left{
        z-index 1
      }
      .part-right {
        margin-left 15px
        & > div {
          color white
          letter-spacing 0.5px
          &.name {
            font-size 17px
            font-weight 500
            color #ffffff
          }
          &.email{
            font-size 13px
            color #f9f9f9
          }
        }
      }
      .k-logo {
        width 65px
        height 65px
        img {
          width 65px
          height 65px
        }
      }
    }
  }
}